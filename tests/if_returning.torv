write(f: i32, buf: Ptr(u8), len: usize): i32 @extern("write")

true_msg  := "it's true!\n"
false_msg := "it's false\n"

get_msg(cond) :=
    if cond then
        true_msg
    else
        false_msg

main: i32 =
    msg := get_msg(true)
    _ := write(1, @str_ptr(msg, 0), @str_len(msg))
    msg := get_msg(false)
    _ := write(1, @str_ptr(msg, 0), @str_len(msg))
    0
